pipeline {
  agent any
  tools {
    maven "M3"
    jdk "JDK11"
  }
  
  stages {
    stage('Git fetch') {
      steps {
        echo 'Git fatch'
        git url: 'https://github.com/s4616/spring-petclinic.git/',
          branch: 'main', credentialsId: 'gitCredential'
      }
    }
    stage('Maven Build') {
      steps {
        echo 'Maven Build'
        sh 'mvn -Dmaven.test.failure.ignore=true clean package'
      }
    }
    
    stage('Docker Image') {
      steps {
        echo 'Docker Image'
        dir("${env.WORKSPACE}") {
          sh 'docker build -t aws00-spring-petclinic:1.0'
        }
      }
    }
    stage('Image Push') {
      steps {
        echo 'Image Push'
      }
    }
    stage('Codedeploy Workload ') {
      steps {
        echo 'Codedeploy Workload'
      }
    }
  }
}
